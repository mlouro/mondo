{
  "name": "mondo",
  "version": "0.0.1",
  "authors": [
    "mlouro <marco@lincolnloop.com>"
  ],
  "description": "Recurring ToDo's",
  "private": true,
  "type": "app",
  "dependencies": {
    "backbone": "~1.1.0",
    "hoodie": "^0.7.4",
    "hoodie-plugin-appconfig": "~0.2.0",
    "hoodie-plugin-email": "~0.1.4",
    "hoodie-plugin-users": "~0.1.0",
    "hoodie-server": "~0.9.11",
    "jquery": "~2.1.0",
    "loglevel": "~0.5.0",
    "moment": "~2.5.1",
    "react": "^0.8.0",
    "underscore": "~1.5.2"
  },
  "subdomain": "hoodie-mondohood",
  "domains": [
    "admin.hoodie-mondohood.jit.su",
    "couch.hoodie-mondohood.jit.su"
  ],
  "scripts": {
    "start": "node node_modules/hoodie-server/bin/start"
  },
  "hoodie": {
    "plugins": [
      "hoodie-plugin-appconfig",
      "hoodie-plugin-email",
      "hoodie-plugin-users"
    ]
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "devDependencies": {
    "gulp": "~3.5.2",
    "gulp-browserify": "~0.4.2",
    "gulp-sass": "~0.6.0",
    "reactify": "~0.7.0",
    "browserify": "*",
    "gulp-util": "~2.2.14",
    "jshint-stylish": "~0.1.5",
    "gulp-jshint": "~1.4.0",
    "gulp-watch": "~0.5.0",
    "gulp-livereload": "~1.0.1",
    "tiny-lr": "0.0.5",
    "node-bourbon": "~1.0.0",
    "node-neat": "~1.1.0"
  }
}
